<p id="notice"><%= notice %></p>

<h1>Settlements</h1>

<table>
  <thead>
    <tr>
      <th>Payment</th>
      <th>Settle amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settlements.each do |settlement| %>
      <tr>
        <td><%= settlement.payment_id %></td>
        <td><%= settlement.settle_amount %></td>
        <td><%= settlement.status %></td>
        <td><%= link_to 'Show', settlement %></td>
        <td><%= link_to 'Edit', edit_settlement_path(settlement) %></td>
        <td><%= link_to 'Destroy', settlement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Settlement', new_settlement_path %>
