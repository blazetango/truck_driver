<%= form_with(model: payment, local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :payment_type %>
    <%= form.select :payment_type, Payment.payment_types.map { |key, _value| [key.capitalize, key.to_s] },{}, {} %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount %>
  </div>

  <div class="field">
    <%= form.label :truck_driver_id %>
    <%= form.select :truck_driver_id, TruckDriver.all.map{ |td| [td.name, td.id]}, {}, {}    %>
  </div>

  <div class="field">
    <%= form.label :purchase_id %>
    <%= form.select :purchase_id, Purchase.all.map { |d| [d.id, d.id]},{}, {} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
